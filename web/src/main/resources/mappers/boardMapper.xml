<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org// DTD Mapper 3.0/EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pil.mapper.BoardMapper">
	<insert id="create">
		INSERT 
		INTO 
		board(title, content, writer) 
		VALUES(#{title}, #{content}, #{writer});
	</insert>

	<select id="read" resultType="BoardVO">
		SELECT 
		* 
		FROM
		board WHERE no = #{no}	
	</select>

	<update id="update">
		UPDATE 
		board 
		SET 
		title=#{title}, 
		content=#{content}
		WHERE no = #{no}
	</update>

	<delete id="delete">
		DELETE FROM board WHERE no = #{no}	
	</delete>

	<select id="list">
		SELECT 
		* 
		FROM
		board	
	</select>
</mapper>